{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "es2017",
            "es2019"
        ],
        "allowJs": true,
        "jsx": "react-native",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "**/__tests__"
    ]
}